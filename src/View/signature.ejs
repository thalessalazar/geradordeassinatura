<!DOCTYPE html>
<html lang="pt">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Gerador de Assinatura de E-mail</title>

    <!-- Bootstrap core CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.css" rel="stylesheet" type="text/css">

    <!-- Custom fonts for this template -->
    <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet">
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="/css/resume.css" type="text/css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="/css/style.css">

</head>

<body id="page-top">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">
            <span class="d-block d-lg-none">Gerador de Assinatura</span>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="/">Assinatura de E-mail</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="/Manual-Assinatura-Email.odt" download>Guia de
                        instalação</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid p-0">
        <section class="resume-section p-1 p-lg-5" id="about">
            <div class="w-100">
                <div class="card">
                    <h5 class="card-header info-color white-text text-center py-4 texto" style="color: #fff;">
                        <strong>Preview</strong>
                    </h5>
                    <!--Card content-->
                    <div class="card-body px-lg-5">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-1 signature">
                                    <div class="background" id="my-node">
                                        <div><img class="logo" src="/img/logo.png"></div>
                                        <div class="direita">
                                            <div class="dados">
                                                <p id="name" value="<%=name%>" class="nome"><%=name%></p>
                                                <p class="cargo"><%=role%></p>
                                                <div class="traco"></div>

                                                <p class="telefone">(53) 3242.8800
                                                    <% if(extension) { %>
                                                    - r. <%=extension%>
                                                    <% } %>
                                                    
                                                    <% if(phone) { %>
                                                    / <%=phone%></p>
                                                <% } %>
                                                <p class="endereco">Av. Portugal, 662. Bagé - RS</p>
                                                <!--falta adicionar as redes sociais-->
                                            </div>
                                            <div class="lista">
                                                <ul style="list-style: none">
                                                    <li><img class="icon" src="/img/global.png"></li>
                                                    <li>
                                                        <p class="vermelho">peruzzo.com.br</p>
                                                    </li>
                                                    <li style="margin-left: 5px;"><img class="icon" src="/img/fb.png">
                                                    </li>
                                                    <li>
                                                        <p class="verde">@supermercadosperuzzo</p>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Sign in button -->
                        <button class="btn btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect"
                            id="btn">Download</button>
                    </div>
                </div>
            </div>
        </section>

        <hr class="m-0">

    </div>
    <!--Converte para imagem-->
    <script src="/dom-to-image.js"></script>
    <script>
        document.getElementById('btn').addEventListener('click', function () {
            var node = document.getElementById('my-node');
            domtoimage.toJpeg(document.getElementById('my-node'), {
                quality: 1,
                height: 189,
                width: 605
            })
                .then(function (dataUrl) {
                    var link = document.createElement('a');
                    var name = document.getElementById('name').innerHTML + " - Assinatura";
                    link.download = name;
                    link.href = dataUrl;
                    link.click();
                });
        });
    </script>
    <!-- Bootstrap core JavaScript -->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="/js/resume.js"></script>

</body>

</html>